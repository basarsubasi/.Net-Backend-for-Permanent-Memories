@inherits LayoutComponentBase

<div class="main-container">
    <header>
        <h1>Blazer Shop</h1>
    </header>

    <nav>
        <a href="#">Home</a>
        <a href="#">Cameras</a>
        <a href="#">Films</a>
        <a href="#">Contact Us</a>
        <a href="/login">Login</a>
        <a href="/signup">Sign Up</a>
    </nav>

    <div class="search-container">
        <input type="text" placeholder="Search for blazers...">
        <button type="submit">Search</button>
    </div>

    <div class="main-content">
        @Body
    </div>

    <footer>
        &copy; 2023 Blazer Shop. All rights reserved.
    </footer>
</div>

<style>
    /* Your existing or additional CSS styles can go here */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    header {
        background-color: #964B00;
        color: #fff;
        padding: 10px;
        text-align: center;
    }

    nav {
        display: flex;
        justify-content: space-around;
        background-color: #f9E4BC;
        padding: 10px;
    }

    nav a {
        color: #964B00;
        text-decoration: none;
        padding: 10px;
    }

    nav a:hover {
        background-color: #f9E4BC;
    }

    .search-container {
        text-align: center;
        margin: 20px 0;
    }

    input[type=text] {
        padding: 10px;
        width: 300px;
    }

    button {
        padding: 10px;
        background-color: #964B00;
        color: #fff;
        border: none;
        cursor: pointer;
    }

    button:hover {
        background-color: #964B00;
    }

    .main-content {
        padding: 20px;
        flex-grow: 1;
    }

    footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
    }
</style>
